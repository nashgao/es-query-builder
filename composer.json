{
    "name": "nashgao/es-query-builder",
    "authors": [
        {
            "name": "nashgao",
            "email": "nashgao1992@gmail.com"
        }
    ],
    "require": {
        "hyperf/di": "~2.1.0",
        "hyperf/config": "~2.1.0",
        "hyperf/guzzle": "~2.1.0",
        "hyperf/pool": "~2.1.0",
        "elasticsearch/elasticsearch": "~7.0",
        "easyswoole/spl": "^1.3"
    },
    "require-dev": {
        "hyperf/testing": "~2.1.0",
        "hyperf/framework": "~2.1.0",
        "swoole/ide-helper": "~4.6",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "Nashgao\\Elasticsearch\\QueryBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nashgao\\Test\\": "./test"
        },
        "files": [
            "src/Helper/function.php"
        ]
    },
    "scripts": {
        "test": "./vendor/bin/co-phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "license-check": "docheader check src/ tests/",
        "cs-fix": "php-cs-fixer fix $1",
        "json-fix": "./bin/composer-json-fixer",
        "analyse": "phpstan analyse --memory-limit 4096M -l 5 -c phpstan.neon"
    },
    "extra": {
        "hyperf": {
            "config": "Nashgao\\TimerManager\\ConfigProvider"
        }
    }
}
